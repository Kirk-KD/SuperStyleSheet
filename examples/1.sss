mixin flex {
  display: flex;
  gap: 1vh;
}

main div {
  margin-top: 2vh;
}

.content-container using flex {
  flex-direction: row;

  border: 2px solid rgb(var(--c-dark));
  padding: 1vw;

  >.left using flex {
    flex-direction: column;

    >.text-div {
      flex: 1;
    }
  }

  >div {
    flex: 1;
  }

  >.right {
    overflow: hidden;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
}